{
    "name": "@thormail/client",
    "version": "1.0.2",
    "description": "Official Node.js client for ThorMail Self-Hosted API - Secure queue-based delivery for email, SMS, push notifications",
    "main": "src/index.js",
    "module": "src/index.js",
    "types": "src/index.d.ts",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./src/index.js",
            "types": "./src/index.d.ts"
        }
    },
    "files": [
        "src",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "test": "node test/index.test.js",
        "prepublishOnly": "echo 'Ready to publish!'"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "keywords": [
        "thormail",
        "email",
        "sms",
        "push",
        "webhook",
        "notification",
        "queue",
        "delivery",
        "api",
        "client"
    ],
    "author": "ThorMail",
    "contributors": [
        {
            "name": "jodacame",
            "url": "https://github.com/jodacame"
        }
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/thormail/thormail-ecosystem"
    },
    "homepage": "https://thormail.io",
    "engines": {
        "node": ">=18.0.0"
    },
    "sideEffects": false
}